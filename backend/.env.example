# Contoh file environment untuk backend Flask
# Copy file ini menjadi .env dan sesuaikan sesuai kebutuhan deployment

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-production-secret-key

# Database
DB_HOST=localhost
DB_PORT=3306
